{
    "compilerOptions": {
        "experimentalDecorators": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "es2020",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "esModuleInterop": true,
        "target": "es2019",
        "lib": [
            "es2019",
            "dom"
        ],
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "allowJs": true
    }
}
